# ------------------------------------------------------------
# Nexus Pay - Data Layer (.env)
# ------------------------------------------------------------
TZ=Asia/Seoul
# MySQL (docker)
MYSQL_EXPOSE_PORT=3306
MYSQL_ROOT_PASSWORD=<YOUR_ROOT_PASSWORD>
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_BOOTSTRAP_DB=mysql_init
# App DB credential (dev/local unified)
MYSQL_APP_USER=<YOUR_APP_USER>
MYSQL_APP_PASSWORD=<YOUR_APP_PASSWORD>
# Databases (one per service)
MEMBERSHIP_DB=membership_db
MONEY_DB=money_db
BANKING_DB=banking_db
REMITTANCE_DB=remittance_db
PAYMENT_DB=payment_db
SETTLEMENT_DB=settlement_db

# ------------------------------------------------------------
# Nexus Pay - Kafka Layer (.env)
# ------------------------------------------------------------
# Kafka (inside docker network)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
# Kafka (external access from host)
KAFKA_EXTERNAL_HOST=localhost
KAFKA_EXTERNAL_PORT=19092
# defaults for topic-init
KAFKA_DEFAULT_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1
KAFKA_LOG_RETENTION_HOURS=72
# Kafka UI
KAFKA_UI_PORT=18080
KAFKA_UI_CLUSTER_NAME=nexus-dev
